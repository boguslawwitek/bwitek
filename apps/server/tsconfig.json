{
	"compilerOptions": {
	  "target": "ESNext",
	  "module": "ESNext",
	  "moduleResolution": "bundler",
	  "verbatimModuleSyntax": true,
	  "composite": true,
	  "declaration": true,
	  "declarationMap": true,
	  "sourceMap": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "baseUrl": "./",
	  "paths": {
		"@/*": ["./src/*"]
	  },
	  "outDir": "./dist",
	  "types": ["bun"],
	  "jsx": "react-jsx",
	  "jsxImportSource": "hono/jsx"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"tsc-alias": {
	  "resolveFullPaths": true
	}
  }
  